[MESSAGES CONTROL]
good-names=f

disable=
    # allow f-string logging
    logging-fstring-interpolation,

    # let black worry about these
    line-too-long,
    
    # Not useful
    no-else-return,
    no-self-use,
    no-else-continue,
    too-few-public-methods,
    R0801, # similar lines

    # test specific
    redefined-outer-name,
    missing-module-docstring,
    missing-function-docstring,
    missing-class-docstring,
    unused-argument,
    protected-access,
