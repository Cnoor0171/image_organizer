{
    "python.pythonPath": ".venv/bin/python",
    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    "files.watcherExclude": {
        "**/*": false,
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/*.egg-info": true,
        ".pytest_cache": true,
    }
}